@page
@model RegisterModel


<h1>@ViewData["Title"]</h1>
<html>
<head>
    <title>Montage</title>
    <link rel="stylesheet" href="assets/css/main.css" />
</head>
<body>

    <!-- Header -->
    <header id="header">
        <h1>@Html.ActionLink("Montage", "Index")</h1>
        <a href="#menu">Menu</a>
    </header>

    <!-- Nav -->
    <nav id="menu">
        <ul class="links">
            <li>@Html.ActionLink("Home", "Index")</li>
            
            <li>@Html.ActionLink("About", "About")</li>
            <li>@Html.ActionLink("Tutorial", "Tutorial")</li>
            <li><a href="https://app.swaggerhub.com/apis/Montage1/ServerAPI/1.0.0" target="_blank">API</a></li>
            <li class="selected"><a href="/Identity/Account/Login">Account</a></li>
            <li>@Html.ActionLink("Contact", "Contact")</li>
        </ul>
    </nav>

    <section class="wrapper ">
        <div class="inner">

            <div class="row">
                <section>
                    <div class="image fit-2">
                        <img src="~/images/pill.png" alt="montage-logo.png" />

                    </div>

                </section>
            </div>
        </div>
    </section>
    <div class="row" style="width:800px; margin:0 auto;">
 
        
        <div class="col-md-4" style="font-size:18px">
            
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4><br>Create a new account.</h4>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
        <div class="col-md-6 col-md-offset-2">
